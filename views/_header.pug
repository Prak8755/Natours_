header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
    .header__logo
      img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      button.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img(src='/img/users/user-1.jpg' alt='User photo' class='nav__user-img')
        span #{user.name.split(' ')[0]}
    else 
      button.nav__el.nav__el--cta Sign up
      a.nav__el(href='/login') Login 

      